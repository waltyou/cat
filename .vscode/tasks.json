{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vscode-extension:esbuild",
      "type": "shell",
      "command": "node",
      "args": [
        "./scripts/esbuild.js"
      ],
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always"
      },
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/extensions/vscode"
      }
    },
    {
      "label": "build-binary",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build"
      ],
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always"
      },
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/binary"
      }
    },
    {
      "label": "gui:dev",
      "type": "shell",
      "command": "npm",
      "options": {
        "cwd": "${workspaceFolder}/gui",
        "env": {
          "VITE_PORT": "5174"
        }
      },
      "args": [
        "run",
        "dev"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^.*$",
          "file": 0,
          "location": 0,
          "message": 0
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*VITE.*",
          "endsPattern": ".*ready in.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}