{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vscode-extension:esbuild",
      "type": "shell",
      "command": "node",
      "args": [
        "./scripts/esbuild.js"
      ],
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always"
      },
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/extensions/vscode"
      }
    },
    {
      "label": "build-binary",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build"
      ],
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always"
      },
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/binary"
      }
    },
    {
      "label": "gui:dev",
      "type": "shell",
      "command": "npm",
      "options": {
        "cwd": "${workspaceFolder}/gui"
      },
      "args": [
        "run",
        "dev"
      ],
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    }
  ]
}